prompt: Location {Urban|Wilderness|Dungeon|Random} Random

table: Master
maxReps: 1
Shuffle: UrbanTag
Shuffle: WildernessTag
Shuffle: DungeonTag
Set: loc=[when]{$prompt1} = Random[do][|Wilderness|Urban|Dungeon][else]{$prompt1}[end]
